
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Survey {
  id Int @id @default(autoincrement())
  title String

  questions Question[]
}

model Question {
  id Int @id @default(autoincrement())
  questionText String
  surveyId Int

  answers Answer[]

  survey Survey @relation(fields: [surveyId], references: [id])
 
}

model Answer {
  id Int @id @default(autoincrement())
  answerText String
  questionId Int

  question Question @relation(fields: [questionId], references:[id])
  
}